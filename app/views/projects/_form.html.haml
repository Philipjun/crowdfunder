= form_for @project do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :goal
    %br
    = f.number_field :goal
  %h3 Breakpoints
  #breakpoints
    = f.fields_for :breakpoints do |breakpoint|
      = render 'breakpoints_fields', :f => breakpoint
    .links
      = link_to_add_association 'add breakpoint', f, :breakpoints
    = f.submit